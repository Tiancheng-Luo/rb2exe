#!/bin/bash
export TMPDIR=`mktemp -d /tmp/selfextract.XXXXXX`
export ARGV=$@

ARCHIVE=`awk '/^__ARCHIVE_BELOW__/ {print NR + 1; exit 0; }' $0`

tail -n+$ARCHIVE $0 | tar -xz -C $TMPDIR

CDIR=`pwd`
cd $TMPDIR
if __DAEMON__ ; then
  ./installer __RUBY_COMMAND__ __IS_RAILS__ &
else
  ./installer __RUBY_COMMAND__ __IS_RAILS__
fi

cd $CDIR
rm -rf $TMPDIR

exit 0

__ARCHIVE_BELOW__
